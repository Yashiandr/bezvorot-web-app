  "scripts": {
    "dev": "next dev --turbopack",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "test": "jest --config ./config/jest/jest.config.ts",
    "storybook": "storybook dev -p 6006 -c ./config/storybook",
    "storybook:build": "storybook build -c ./config/storybook",
    "docker:build": "docker build -t bezvorot-visual-test . -f Dockerfile.test",
    "test:visual": "npx playwright test",
    "test:visual:approve": "npx playwright test --update-snapshots",
    "ci:test:visual": "docker run --rm -e CI=true -e TEST_BASE_URL='http://host.docker.internal:6006' -v ${PWD}/storybook-static:/app/storybook-static -v ${PWD}/playwright-reporter:/app/playwright-reporter -v ${PWD}/test-results:/app/test-results -v ${PWD}/test:/app/test -v ${PWD}/playwright.config.ts:/app/playwright.config.ts bezvorot-visual-test test",
    "ci:test:visual:approve": "docker run --rm -e CI=true -e TEST_BASE_URL='http://172.17.0.1:6006' -v ${PWD}/storybook-static:/app/storybook-static -v ${PWD}/playwright-report:/app/playwright-report -v ${PWD}/test-results:/app/test-results -v ${PWD}/test:/app/test -v ${PWD}/playwright.config.ts:/app/playwright.config.ts bezvorot-visual-test test --update-snapshots"
  },
